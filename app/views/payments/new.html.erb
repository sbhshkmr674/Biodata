
<%= form_for @payment do |f|%>
	 <div class="field">
    		
    		<%= f.label :autolyse, "Debit Card",:value => "true" %>
    		<%= f.radio_button :autolyse, true, :checked => true %>
    		<%= f.label :autolyse , "Credit Card",:value => "false" %>
    		<%= f.radio_button :autolyse, false, :checked => false, :id => "credit" %>
    		<%= f.label :autolyse, "Internet Banking",:value => "false" %>
    		<%= f.radio_button :autolyse, true, :checked => false, :id =>"internet" %>
  		</div>
  	<h1>Debit Card Payment</h1>
  	<hr />	
  	<div class="debitcardpayment" id="debit_card">	
	<div class="field">
	   Debit Card Number*
	   <%= f.text_field :d_card, placeholder: "Enter the Debit Card Number"%>
	</div>
	<div class="field">
	    Expiry Date
	    <%= f.text_field :expiry_date, placeholder: 'MM' + 'YYYY'%>
	</div>
	<div class="field">
		CCV Number
		<%= f.text_field :ccv_no, placeholder: "Enter the CCV Number"%>
	</div>
	<div class="field">
	   Please choose the name of Bank
	   <%= f.select :bank_name,[['State Bank Of India'],['HDFC Bank'],['ICICI Bank'],['AXIS Bank'],['Punjab National Bank'],['Kotak Bank']], placeholder: "Please Choose a Bank Name OR Other"%>
	</div>
	
	<div class="col-span-12">
	    <%= f.button "Pay Now", class: "btn btn-green-success"%>
	</div>
</div>
<h1>Credit Card Payment</h1>
<hr />
<div class="cardpayment" id="credit_card">
   <div class="field">
	   Debit Card Number*
	   <%= f.text_field :d_card, placeholder: "Enter the Debit Card Number"%>
	   
	</div>
	<div class="field">
	    Expiry Date
	    <%= f.text_field :expiry_date, placeholder: 'MM' + 'YYYY'%>
	</div>
	<div class="field">
		CCV Number
		<%= f.text_field :ccv_no, placeholder: "Enter the CCV Number"%>
	</div>
	<div class="field">
	   Please choose the name of Bank
	   <%= f.select :bank_name,[['State Bank Of India'],['HDFC Bank'],['ICICI Bank'],['AXIS Bank'],['Punjab National Bank'],['Kotak Bank']], placeholder: "Please Choose a Bank Name OR Other"%>
	</div>
	<div class="radio-toolbar">

    <input type="radio" id="radio1" name="radios" value="all" checked>
    <label for="radio1">Radio1</label>

    <input type="radio" id="radio2" name="radios"value="false">
    <label for="radio2">Radio2</label>

    <input type="radio" id="radio3" name="radios" value="true">
    <label for="radio3">Radio3</label>
</div>
	
	<div class="col-span-12">
	    <%= f.button "Pay Now", class: "btn btn-green-success"%>
	</div>
	<h1>Internet Banking</h1>
	<hr />
	<div class="field">
	  Internet Banking
	  <div id="radio-button-wrapper">
	  	 <span class="image-radio">
	  	<%= f.radio_button :sbi , false,:checked => 'false', :id =>"sbi"%>
		<%= image_tag "SBI.png"%>
	  </span>
	   <span class="image-radio">	
		<%= f.radio_button :hdfc , false,:checked => 'false', :id =>"hdfc"%>
		<%= image_tag "HDFC.png"%>
	   </span> 	
	  <span class="image-radio">
		<%= f.radio_button :icici , false,:checked => 'false', :id =>"icici"%>
		<%= image_tag "ICICI.png"%>
		</span>
		 <span class="image-radio">
		<%= f.radio_button :pnb , false,:checked => 'false', :id =>"sbi"%>
		<%= image_tag "PNB.png" %>
		</span>
		 <span class="image-radio">
		<%= f.radio_button :axis , false,:checked => 'false', :id =>"axis"%>
		<%= image_tag "Axis.png"%>
		</span>
		 <span class="image-radio">
		<%= f.radio_button :kotak , false,:checked => 'false', :id =>"kotak"%>
		<%= image_tag "Kotac.png"%>
		</span>
		<p>Now with CSS3</p>
		<div class="cs-selector">
		 <input checked="checked" type="radio" id="visa" name="credit_card" value="visa" />
		 <label class="drinkcard-cc visa" for="visa"></label>
		 <input checked="checked" type="radio" id="mastercard" name="master_card" value="mastercard" />
		 <label class="drinkcard-cc mastercard" for="mastercard"></label>
		 </div>
		 <p>Now a Simple mod:</p>
		 <div class="cs-selector-2">
		 <input checked="checked" type="radio" id="visa2" name="credit_card" value="visa" />
		 <label class="drinkcard-cc visa" for="visa2"></label>
		 <input checked="checked" type="radio" id="mastercard2" name="master_card" value="mastercard" />
		 <label class="drinkcard-cc mastercard" for="mastercard2"></label>
	</div>
			<small>
				<%= image_tag "SBI.png"%>
				<%= image_tag "HDFC.png"%>
			</small>
	</div>
	<% end %>
   </div>
   
